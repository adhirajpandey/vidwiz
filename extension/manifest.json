{
  "manifest_version": 3,
  "name": "VidWiz",
  "version": "2.0",
  "description": "Chat. Note. Master.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.youtube.com/*", "https://api.vidwiz.online/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://vidwiz.online/*"
    ]
  }
}
